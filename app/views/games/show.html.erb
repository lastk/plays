<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @game.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remote_cover) %>:</strong></dt>
  <dd><%= @game.remote_cover %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @game.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:review) %>:</strong></dt>
  <dd><%= @game.review %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @game.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_sessions) %>:</strong></dt>
  <dd><%= @game.total_sessions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_on) %>:</strong></dt>
  <dd><%= @game.started_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finished_on) %>:</strong></dt>
  <dd><%= @game.finished_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @game.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blurb) %>:</strong></dt>
  <dd><%= @game.blurb %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forum_url) %>:</strong></dt>
  <dd><%= @game.forum_url %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
